<h1>
	<% if @user.booze_level == 0 %>
		SOBER SALLY <div class="label-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f481.png"></div>
	<% elsif @user.booze_level == 1 %>
		TIPSY TURVEY <div class="label-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f4ef.png"></div>
	<% elsif @user.booze_level == 2 %>
		YOU'RE DRUNK! <div class="label-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f389.png"></div>
	<% else %>
		HAMMERED <div class="label-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f528.png"></div>
	<% end %>
</h1>

<% if @user.booze_level < 2 %>
	<h1 id="bac">
<% else %>
	<h1 id="bac" class="nite">
<% end %>
	<%= @user.latest_bac %>
</h1>

<% unless @time.nil? %>
	<p class='timestamp'><%= @time %></p>
<% end %>

<% if @user.booze_level == 0 %>
  <h2>You look like you could use a drink. <div class="option-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f379.png"></div></h2>
  <%= render "bars"%>
<% end %>

<% if @user.booze_level == 1 %>
	<%= link_to bars_url do %>
		<div class="option-button">
			<div class="text">
				KEEP GOING, BRAH
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f379.png"></div>
			</div>
		</div>
	<% end %>
	<%= link_to food_url do %>
		<div class="option-button">
			<div class="text">
				LATE NITE NOMS
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f374.png"></div>
			</div>
		</div>
	<% end %>
<% elsif @user.booze_level == 2  %>
<%= link_to bars_url do %>
		<div class="option-button two">
			<div class="text">
				KEEP GOING, BRAH
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f379.png"></div>
			</div>
		</div>
	<% end %>
	<%= link_to food_url do %>
		<div class="option-button two">
			<div class="text">
				LATE NITE NOMS
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f374.png"></div>
			</div>
		</div>
	<% end %>
	<%= link_to @uberurl do %>
		<div class="option-button two">
			<div class="text">
				CALL IT A NIGHT 
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f698.png"></div>
			</div>
		</div>
	<% end %>
<% end %>

<% if @user.booze_level == 3 %>
<h2 style="font-size: 3em; margin-top: .3em; padding-bottom: .5em;">Go home, <%= @user.first %>.<br>You're drunk.</h2>
  <%= link_to @uberurl do %>
		<div class="option-button three">
			<div class="text">
				UBER
				<div class="button-emoji"><img src="https://abs.twimg.com/emoji/v1/72x72/1f698.png"></div>
			</div>
		</div>
	<% end %>
<% end %> 

