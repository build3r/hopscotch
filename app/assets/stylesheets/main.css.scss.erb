.barstools {
	margin: 0;
	height: 13em;
	position: absolute;
	width: 100%;
	bottom: 0;
	background-image:  url(<%= asset_path 'barstool.png' %>);
	background-repeat: repeat-x;
}

.bac-button {
	background: #F8CA4D;
	border-right: solid darken(#F8CA4D, 25%) 5px;
	border-bottom: solid darken(#F8CA4D, 25%) 5px;
	border-radius: 10px;

	.text {
		color: #2F3440;
		width: 100%;
		text-align: center;
	}

	&.zero {
		width: 60%;
		margin: 14em auto 0;
		height: 4em;

		.text {
			font-size: 2em;
			padding-top: .4em;
		}
	}

	&.one {
		width: 70%;
		margin: 13em auto 0;
		height: 6em;

		.text {
			font-size: 2em;
			padding-top: .9em;
		}
	}

	&.two {
		width: 80%;
		margin: 11em auto 0;
		height: 10em;

		.text {
			font-size: 3em;
			padding-top: 1.1em;
		}
	}

	&.three {
		width: 90%;
		margin: 9em auto 0;
		height: 14em;

		.text {
			font-size: 6em;
			font-weight: bold;
			padding-top: .55em;
		}
	}
}