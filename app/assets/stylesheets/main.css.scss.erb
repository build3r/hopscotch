.barstools {
	margin: 0;
	height: 16em;
	position: absolute;
	width: 100%;
	bottom: 0;
	background-image:  url(<%= asset_path 'barstool.png' %>);
	background-repeat: repeat-x;

	&.nite {
		background-image: url(<%= asset_path 'barstool_nite.png' %>);
	}
}

a {
	text-decoration: none;
}

.bac-button {
	background: #F8CA4D;
	border-right: solid darken(#F8CA4D, 25%) 5px;
	border-bottom: solid darken(#F8CA4D, 25%) 5px;
	border-radius: 10px;

	.text {
		color: #2F3440;
		width: 100%;
		text-align: center;
	}

	&.zero {
		width: 60%;
		margin: 13em auto 0;
		height: 4em;

		.text {
			font-size: 2em;
			padding-top: .4em;
		}
	}

	&.one {
		width: 70%;
		margin: 12em auto 0;
		height: 6em;

		.text {
			font-size: 2em;
			padding-top: .9em;
		}
	}

	&.two {
		width: 80%;
		margin: 10em auto 0;
		height: 10em;

		.text {
			font-size: 3em;
			padding-top: 1.1em;
		}
	}

	&.three {
		width: 90%;
		margin: 9em auto 0;
		height: 14em;

		.text {
			font-size: 6em;
			font-weight: bold;
			padding-top: .55em;
		}
	}
}

h1 {
	font-size: 3.2em;
	text-align: center;
	margin-top: .3em;
}

h1 .label-emoji {
	margin-left: .25em;
	display: inline-block;
	height: .75em;
	width: .75em;

	img {
		height: 100%;
		width: 100%;
	}
}

h1#bac {
	font-size: 3.8em;
	color: #EA6045;
	margin-top: -.15em;
}

.timestamp {
	width: 100%;
	text-align: center;
	color: #3F5666;
}

h2 {
	width: 90%;
	margin: 1em auto 0;
	text-align: center;
	font-size: 1.7em;

	.option-emoji {
		width: .9em;
		height: .9em;
		display: inline-block;

		img {
			width: 100%;
			height: 100%;
		}
	}
}

.place-item {
	width: 90%;
	margin: 1em 5%;
	position: relative;
	height: 3em;

	h3.big {
		padding-top: .5em;
		font-size: 1.2em;
	}


	.icon-logo {
		float: left;
	}

	p {
		padding: 0;
		margin: 0;
	}

	.info {
		margin-left: 1em;
		display: inline-block;
		width: 20em;

		&.big {
			width: 15em;
		}
	}

	.uber-button {
		display: inline-block;
		position: absolute;
		top: 1.5em;
		right: 0;
		background: #3F5666;
		padding: .5em;
		color: #F8CA4D;
		border-radius: 10px;

		&.big {
			padding: .6em 2em;
		}
	}
}

.icon-logo {
	width: 5em;
	height: 5em;
	border-radius: 50%;
	background-color: #555;
	display: inline-block;

	img {
		width: 4em;
		height: 4em;
		padding: .5em;
	}
}

table {
	text-align: center;
	width: 100%;

	td {
		width: 33%;
		padding: 2em 0 0 0 ;
		margin: 0;

		.icon-logo {
			width: 7em;
			height: 7em;

			img {
				width: 5.5em;
				height: 5.5em;
				padding: .75em;
			}
		}
	}
}