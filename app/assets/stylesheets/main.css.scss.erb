.barstools {
	margin: 0;
	height: 16em;
	position: absolute;
	width: 100%;
	bottom: 0;
	background-image:  url(<%= asset_path 'barstool.png' %>);
	background-repeat: repeat-x;

	&.nite {
		background-image: url(<%= asset_path 'barstool_nite.png' %>);
	}
}

a {
	text-decoration: none;
}

.bac-button {
	background: #F8CA4D;
	border-right: solid darken(#F8CA4D, 25%) 5px;
	border-bottom: solid darken(#F8CA4D, 25%) 5px;
	border-radius: 10px;

	.text {
		color: #2F3440;
		width: 100%;
		text-align: center;
	}

	&.zero {
		width: 60%;
		margin: 13em auto 0;
		height: 4em;

		.text {
			font-size: 2em;
			padding-top: .4em;
		}
	}

	&.one {
		width: 70%;
		margin: 12em auto 0;
		height: 6em;

		.text {
			font-size: 2em;
			padding-top: .9em;
		}
	}

	&.two {
		width: 80%;
		margin: 10em auto 0;
		height: 10em;

		.text {
			font-size: 3em;
			padding-top: 1.1em;
		}
	}

	&.three {
		width: 90%;
		margin: 9em auto 0;
		height: 14em;

		.text {
			font-size: 6em;
			font-weight: bold;
			padding-top: .55em;
		}
	}
}

h1 {
	font-size: 3.4em;
	text-align: center;
	margin-top: .3em;
}

h1 .label-emoji {
	margin-left: .25em;
	display: inline-block;
	height: .75em;
	width: .75em;

	img {
		height: 100%;
		width: 100%;
	}
}

h1#bac {
	font-size: 3.8em;
	color: #EA6045;
	margin-top: -.15em;
}

.timestamp {
	width: 100%;
	text-align: center;
	color: #3F5666;
}

h2 {
	width: 90%;
	margin: 1em auto 0;
	text-align: center;
	font-size: 1.7em;

	.option-emoji {
		width: .9em;
		height: .9em;
		display: inline-block;

		img {
			width: 100%;
			height: 100%;
		}
	}
}